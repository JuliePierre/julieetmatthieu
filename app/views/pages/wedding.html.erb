      <div class="frame__text">
        <h2>Votre réponse</h2>
        <p class="small-text">Réponse souhaitée avant le 31 juillet</p>
        <% if @user_type == "lunch_invited" %>
          <!-- Formulaire avec déjeuner -->
          <%= form_tag "/answer", method: :post, id: "rsvp-form" do |f| %>
            <label for="name" class="label-upper">Votre nom</label>
            <input type="text" name="nom" class="input white-input input-with-submit" id="name">
            <label for="votre_email" class="label-upper">Votre email</label>
            <input type="text" name="email" class="input white-input input-with-submit" id="votre_email">
            <h5>Samedi 22 septembre</h5>
            <p>Serez-vous présent au DEJEUNER ?</p>
            <div class="checkbox-dot">
              <input type="checkbox" name="answer_dejeuner" id="dejeuner_oui" value="oui">
              <label for="dejeuner_oui">Oui</label>
            </div>
            <div class="checkbox-dot">
              <input type="checkbox" name="answer_dejeuner" id="dejeuner_non" value="non">
              <label for="dejeuner_non">Non</label>
            </div>
            <div>
              Combien de personnes ?
